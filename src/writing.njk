      <a href="{{ article.url }}" class="u-url">
        <h2 class="p-name">{{ article.data.title }}</h2>
        <p class="p-summary">{{ article.data.description }}</p>
        <time class="dt-published" datetime="{{ article.date | htmlDateString }}">{{ article.date | readableDate }} â€” {{ article.content | readingTime }}</time>
      </a>
    </li>
    {%- endif -%}
    {%- endfor -%}
  </ul>
</div>
