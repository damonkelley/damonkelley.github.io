---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="intro">
				<h1>Software developer in Brooklyn, New York</h1>
				<p>
					Building things with code. Interested in distributed systems, web development,
					and creating tools that make developers' lives easier.
				</p>
			</section>
		</main>
		<Footer />
	</body>
	<style>
		.intro {
			max-width: 600px;
		}
		.intro h1 {
			font-size: 2.5rem;
			line-height: 1.1;
			margin-bottom: 2rem;
		}
		.intro p {
			font-size: 1.125rem;
			color: #333;
			line-height: 1.7;
		}
		@media (max-width: 768px) {
			.intro h1 {
				font-size: 2rem;
			}
		}
	</style>
</html>
