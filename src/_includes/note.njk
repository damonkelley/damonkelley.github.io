---
layout: base.njk
---
<article class="h-entry">
  <header>
    <time class="dt-published" datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
  </header>
  <div class="e-content">
    {{ content | safe }}
  </div>
  <a class="u-url" href="{{ page.url }}" hidden></a>
  <a class="p-author h-card" href="/" hidden>{{ metadata.author.name }}</a>
</article>
