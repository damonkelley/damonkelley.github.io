<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% set pageTitle = title or ("Note by " + metadata.author.name) %}
    {% set pageDescription = description or (content | excerpt) or metadata.description %}
    <title>{{ pageTitle }}</title>
    <meta name="description" content="{{ pageDescription }}">
    <meta property="og:type" content="{{ 'article' if layout == 'layouts/post.njk' or layout == 'layouts/note.njk' else 'website' }}">
    <meta property="og:title" content="{{ pageTitle }}">
    <meta property="og:description" content="{{ pageDescription }}">
    <meta property="og:url" content="{{ metadata.url }}{{ page.url }}">
    <meta property="og:site_name" content="{{ metadata.title }}">
    {% set pageImage = heroImage or "/images/og-default.png" %}
    <meta property="og:image" content="{{ metadata.url }}{{ pageImage }}">
    <meta name="twitter:card" content="{{ 'summary_large_image' if heroImage else 'summary' }}">
    <meta name="twitter:title" content="{{ pageTitle }}">
    <meta name="twitter:description" content="{{ pageDescription }}">
    <meta name="twitter:image" content="{{ metadata.url }}{{ pageImage }}">

    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="alternate" type="application/rss+xml" title="{{ metadata.title }}" href="/rss.xml">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fraunces:ital,opsz,wght@0,9..144,100..900;1,9..144,100..900&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    {% set domain = metadata.url | replace("https://", "") | replace("/", "") %}
    <link rel="webmention" href="https://webmention.io/{{ domain }}/webmention">
    <link rel="pingback" href="https://webmention.io/{{ domain }}/xmlrpc">
  </head>
  <body>
    <header>
      <a href="/" class="p-name u-url" rel="me">{{ metadata.title }}</a>
      <nav>
        <a href="/writing/">Writing</a>
        <a href="/micro/">Micro</a>
        <a href="/about/">About</a>
      </nav>
    </header>
    <main>
      {{ content | safe }}
    </main>
    <footer class="h-card">
      <p>&copy; {{ "" | year }} <span class="p-name">{{ metadata.author.name }}</span></p>
      <nav>
        <a href="{{ metadata.author.github }}" rel="me">GitHub</a>
        <a href="mailto:{{ metadata.author.email }}" class="u-email" rel="me">Email</a>
      </nav>
    </footer>
  </body>
</html>
