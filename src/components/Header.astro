---
import { SITE_TITLE } from '../consts';
---

<header>
	<div class="container">
		<a href="/" class="site-title">{SITE_TITLE}</a>
		<nav>
			<a href="/blog">Writing</a>
			<a href="/about">About</a>
		</nav>
	</div>
</header>
<style>
	header {
		border-bottom: 3px solid #000;
		padding: 2rem 0;
		margin-bottom: 0;
		background: rgba(255, 255, 255, 0.9);
	}
	.container {
		max-width: 720px;
		margin: 0 auto;
		padding: 0 2rem;
		display: flex;
		justify-content: space-between;
		align-items: baseline;
	}
	.site-title {
		font-size: 1.5rem;
		font-weight: 700;
		text-decoration: none;
		color: #000;
		letter-spacing: -0.02em;
		text-decoration-thickness: 0;
		position: relative;
		display: inline-block;
		z-index: 1;
	}
	.site-title::before {
		content: '';
		position: absolute;
		left: -0.35em;
		right: -0.25em;
		top: 22%;
		bottom: 12%;
		background: #FFD700;
		opacity: 0.5;
		z-index: -1;
		pointer-events: none;
		transform: rotate(-1.5deg) translateY(2px);
		border-radius: 8px 3px 6px 4px;
		filter: blur(0.5px);
	}
	.site-title::after {
		content: '';
		position: absolute;
		left: -0.25em;
		right: -0.35em;
		top: 28%;
		bottom: 18%;
		background: #FFD700;
		opacity: 0.45;
		z-index: -1;
		pointer-events: none;
		transform: rotate(0.5deg) translateY(-1px);
		border-radius: 4px 7px 3px 9px;
		filter: blur(0.5px);
	}
	.site-title:hover {
		text-decoration: none;
	}
	nav {
		display: flex;
		gap: 2rem;
	}
	nav a {
		font-size: 1rem;
		font-weight: 500;
		text-decoration: none;
		color: #000;
		padding: 0;
		border-bottom: 2px solid transparent;
		transition: border-color 0.2s ease;
	}
	nav a:hover {
		border-bottom-color: #000;
		text-decoration: none;
	}
	@media (max-width: 768px) {
		.container {
			padding: 0 1.5rem;
		}
	}
	@media (max-width: 480px) {
		header {
			padding: 1.5rem 0;
		}
		.container {
			padding: 0 1rem;
		}
		.heading {
			margin-bottom: 1.5rem;
		}
		nav {
			gap: 1.5rem;
		}
	}
</style>
