---
import { SITE_TITLE } from '@/consts';
---

<header>
	<div class="container">
		<a href="/" class="site-title highlight">{SITE_TITLE}</a>
		<nav>
			<a href="/blog">Writing</a>
			<a href="/about">About</a>
		</nav>
	</div>
</header>
<style>
	header {
		border-bottom: 3px solid #000;
		padding: 2rem 0;
		margin-bottom: 0;
		background: rgba(255, 255, 255, 0.9);
	}
	.container {
		max-width: 720px;
		margin: 0 auto;
		padding: 0 2rem;
		display: flex;
		justify-content: space-between;
		align-items: baseline;
	}
	.site-title {
		font-size: 1.5rem;
		font-weight: 700;
		text-decoration: none;
		color: #000;
		letter-spacing: -0.02em;
		text-decoration-thickness: 0;
	}
	.site-title:hover {
		text-decoration: none;
	}
	nav {
		display: flex;
		gap: 2rem;
	}
	nav a {
		font-size: 1rem;
		font-weight: 500;
		text-decoration: none;
		color: #000;
		padding: 0;
		border-bottom: 2px solid transparent;
		transition: border-color 0.2s ease;
	}
	nav a:hover {
		border-bottom-color: #000;
		text-decoration: none;
	}
	@media (max-width: 768px) {
		.container {
			padding: 0 1.5rem;
		}
	}
	@media (max-width: 480px) {
		header {
			padding: 1.5rem 0;
		}
		.container {
			padding: 0 1rem;
		}
		.heading {
			margin-bottom: 1.5rem;
		}
		nav {
			gap: 1.5rem;
		}
	}
</style>
